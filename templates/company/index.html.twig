{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
{#                <th>Description</th>#}
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Code_postal</th>
                <th>Logo</th>
                <th>Rcs</th>
                <th>Siret</th>
                <th>FormLegal</th>
                <th>IsActive</th>
                <th>ValeurNominal</th>
                <th>CodeValeur</th>
                <th>Siteweb</th>
{#                <th>MotDuPresident</th>#}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in compa %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
{#                <td>{{ company.description }}</td>#}
                <td>{{ company.telephone }}</td>
                <td>{{ company.adresse }}</td>
                <td>{{ company.codePostal }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.rcs }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.formeLegale}}</td>
                <td>{{ company.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ company.valeurNominal }}</td>
                <td>{{ company.codeValeur }}</td>
                <td>{{ company.siteweb }}</td>
{#                <td>{{ company.motDuPresident }}</td>#}
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}">Create new</a>
{% endblock %}
