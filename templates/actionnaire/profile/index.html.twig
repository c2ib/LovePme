{% extends 'users.html.twig' %}

{% block title %}Hello profileController!{% endblock %}
{% block body %}
	<main>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="card shadow-lg border-0 rounded-lg mt-5">
						<div class="card-header">
							<h3 class="text-center font-weight-light my-4">Données personnelles de {{ app.user.firstName }} {{ app.user.lastName }}</h3>
						</div>
						<div class="card-body">
							<div class="form-floating ">
								<div class="row">
										<div class="mb-2">
                                        	<div class="col-xs1">Email :</div>
											{{ app.user.email}}
										</div>
										<div class="mb-2">
                                        	<div class="col-xs1">Nom :</div>
											{{ app.user.lastName}}
										</div>
										<div class="mb-2">
                                            <div class="col-xs1">Prénom :</div>
											{{ app.user.firstName}}
										</div>
                                        	<div class="mb-2">
                                            <div class="col-xs1">Adresse :</div>
											{{ app.user.adresse}}
										</div>
										<div class="mb-2">
                                            <div class="col-xs1">Code postal :</div>
											{{ app.user.zipCode}}
										</div>
										<div class="mb-2">
                                        <div class="col-xs1">Ville :</div>
											{{ app.user.ville}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}