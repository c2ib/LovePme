{% extends 'base.html.twig' %}

{% block title %}Hello newCompanyController!
{% endblock %}

{% block body %}
	<main>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="card shadow-lg border-0 rounded-lg mt-5">
						<div class="card-header">
							<h3 class="text-center font-weight-light my-4">Création d'une nouvelle société</h3>
						</div>
						<div class="card-body">
							<div class="form-floating ">
								<div class="row">
									<div class="col-sm-6 ">
										{{ form_start(formAnnonce) }}
										<div class="my-custom-class-for-errors">
											{{ form_errors(formAnnonce) }}
										</div>
										<div class="mb-2">
											{{form_row(formAnnonce.quantite)}}
										</div>
										<div class="mb-2">
											{{form_row(formAnnonce.prixUnitaire)}}
										</div>
										<div class="mb-2">
											{{form_row(formAnnonce.dateLimite)}}
										</div>
									</div>
								<button class="btn btn-primary">
									Ajouter
								</button>
								{{ form_end(formAnnonce) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}

