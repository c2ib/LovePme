{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">

                <h1>User index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Password</th>
                        <th>IsVerified</th>
                        <th>Created</th>
                        <th>Modified</th>
                        <th>LastLoginDate</th>
                        <th>BirthDate</th>
                        <th>LastName</th>
                        <th>FirstName</th>
                        <th>Phone</th>
                        <th>Adresse</th>
                        <th>Zip_code</th>
                        <th>City</th>
                        <th>titre</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                            <td>{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ user.modified ? user.modified|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ user.lastLoginDate ? user.lastLoginDate|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ user.birthDate ? user.birthDate|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.phone }}</td>
                            <td>{{ user.adresse }}</td>
                            <td>{{ user.zipCode }}</td>
                            <td>{{ user.city }}</td>
                            <td>{{ user.actions }}</td>
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="16">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('user_new') }}">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}
